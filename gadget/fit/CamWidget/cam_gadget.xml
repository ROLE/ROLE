<?xml version="1.0" encoding="UTF-8"?>
<Module>
    <ModulePrefs
            title="Cam Widget"
            author_email="my@email.com">
    </ModulePrefs>
    <Content type="html">
    	<![CDATA[
    		<div>Select CAM storage Mode:</div> 
	    	<script>
		    	function inform(value) {
		    		document.getElementById("output").innerHTML = "Storage Mode: " + value;
				}
			</script>
			<div> <input type="Radio" name="selection" value="local" onclick="inform(value)"> local </input> </div>
			<div> <input type="Radio" name="selection" value="off" onclick="inform(value)"> off </input> </div>
	    	<div id="output">Storage Mode: </div>
    	]]>
    </Content>
</Module>

