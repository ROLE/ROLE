<?xml version="1.0" encoding="UTF-8"?>
<Module>
    <ModulePrefs
            title="Cam Widget"
            author_email="my@email.com"
            height="400"
            width="400">
    </ModulePrefs>
    
    <Content type="html">
    	<![CDATA[
    		<script src="./gears_init.js"></script>
			<script>
			 	var url = window.location;
  				if (!window.google || !google.gears) {
    				location.href = "http://gears.google.com/?action=install&message=hello" + "&return="+url;
  				}
			</script>
    	]]>
    	<![CDATA[
			<script language="JavaScript" src="./camwidget_canvas.js"></script>
			
    		<div>Select CAM storage Mode:</div> 
	    	<script>
		    	function inform(storagemode) {
		    		javascript:store(storagemode);	
				}
			</script>
			<div> <input type="Radio" name="selection" value="local" onclick="inform(value)"> local </input> </div>
			<div> <input type="Radio" name="selection" value="off" onclick="inform(value)"> off </input> </div>
			<div> <a href="javascript:query(10)"> last 10 entries...</a> </div>

    	]]>
    </Content>
</Module>

