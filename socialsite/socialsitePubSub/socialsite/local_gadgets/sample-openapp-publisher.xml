<Module>
<ModulePrefs title="Sample OpenApp Publisher"
             height="250">
<Require feature="pubsub"/>
</ModulePrefs>
<Content type="html">
<![CDATA[
<script>

var NS = {
  RDF: "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
  A: "http://www.w3.org/2000/10/annotation-ns#",
  ROLE: "http://www.role-project.eu/rdf/"
};

function publish() {
  var message = {};
  message[NS.RDF+"type"] = NS.ROLE+"Word";
  message[NS.A+"content"] = document.getElementById("wordInput").value;
  var envelope = {
    event: "select",                // The name of the event
    sharing: "open",                // Sharing level: may be shared freely
    type: "namespaced-properties",  // The type of the included message
    message: message                // The requirements for this message object depend on the type
  };
  gadgets.pubsub.publish("openapp", envelope);
}

</script>
<div>
<strong>Word:</strong> <input type="text" value="" id="wordInput"/>
<input type="button" value="Add" onclick="publish()"/>
</div>
<div id="output">
</div>
]]>
</Content>
</Module>
